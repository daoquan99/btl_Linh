@model Eshopper.Models.EF.NguoiDung

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2> Đăng ký người dùng </h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row justify-content-center">
                <div class="col-5">
                    <h3>
                        Thông tin cá nhân
                    </h3>
                    <div class="form-group">
                        <label class="col-form-label">
                            Tên người dùng
                        </label>
                        <div>
                            <input name="TenND" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-form-label">
                            Số điện thoại
                        </label>
                        <div>
                            <input name="SDT" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-form-label">
                            Địa chỉ
                        </label>
                        <div>
                            <input name="DiaChi" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng ký" class="btn btn-outline-primary" />
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <h3>
                        Thông tin đăng nhập
                    </h3>

                    <div class="form-group">
                        <label class=" col-form-label">
                            Email cá nhân
                        </label>
                        <div>
                            <input type="email" name="Email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">
                            Tài khoản
                        </label>
                        <div>
                            <input name="UserName" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-form-label">
                            Mật khẩu
                        </label>
                        <div>
                            <input type="password" name="MatKhau" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-form-label">
                            Xác nhận mật khẩu
                        </label>
                        <div>
                            <input type="password" name="confimPass" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

           
        </div>
    }
</div>
