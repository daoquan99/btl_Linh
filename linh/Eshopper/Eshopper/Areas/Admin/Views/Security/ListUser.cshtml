@model IEnumerable<Eshopper.Models.EF.NguoiDung>

@{
    ViewBag.Title = "ListUser";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2>Danh sách người dùng</h2
    <p>
        <a class="btn btn-primary" href="@Url.Action("Register")">
            Tạo tài khoản mới
        </a>
        <a class="btn btn-success" href="@Url.Action("Login")">
            Đăng nhập
        </a>
    </p>

    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Tên người dùng
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Email
            </th>
            <th>
                Tên tài khoản
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenND)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a class="btn btn-outline-info" href="@Url.Action("GetRoleForUser", new { maND = item.MaND})">
                        Phân quyền
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
