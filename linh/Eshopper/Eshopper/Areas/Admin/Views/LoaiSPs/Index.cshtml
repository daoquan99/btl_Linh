@model IEnumerable<Eshopper.Models.EF.LoaiSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<link href="~/Areas/AssetAdmin/css/indexadmin.css" rel="stylesheet" type="text/css">



<div id="titleadmin">QUẢN LÝ LOẠI SẢN PHẨM</div>
<table class="table" id="customers">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaLoaiSP)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.URLAnh)
        </th>*@
        <th style="width:80px">
            <a href="@Url.Action("Create", "LoaiSPs")"><img src="~/Assets/images/icons/add.png" style="margin-left:35%" /></a>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.URLAnh)
                </td>*@
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoaiSP.Replace(" ", string.Empty) }) |
            @*@Html.ActionLink("Details", "Details", new { id = item.MaNCC }) |*@
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoaiSP.Replace(" ", string.Empty) })
            @*@Html.ActionLink("Edit", "Edit", new { id = item.MaLoaiSP }) |*@
            @*@Html.ActionLink("Details", "Details", new { id = item.MaLoaiSP }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id = item.MaLoaiSP })*@
        </td>
        </tr>
    }

</table>

